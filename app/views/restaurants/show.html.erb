<div class="container mt-4">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

  <hr class="my-4">

  <h3>Reviews</h3>
  <ul class="list-group mb-4">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <p class="mb-0"><%= "â­" * review.rating %> - <%= review.content %></p>
      </li>
    <% end %>
  </ul>

  <hr class="my-4">

  <h4>Add a Review</h4>
  <div class="card p-4 bg-light mb-4">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, label: "Your Review" %>
      <%= f.input :rating, collection: 0..5, prompt: "Select your rating" %>
      <%= f.submit "Submit Review", class: "btn btn-success mt-2" %>
    <% end %>
  </div>

  <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-outline-secondary" %>
</div>
