<div class="container mt-4">
  <h1 class="mb-4">All Restaurants</h1>

  <ul class="list-group mb-4">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= restaurant.name %></strong>
          <span class="text-muted">(<%= restaurant.category.capitalize %>)</span>
        </div>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary btn-sm" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a new restaurant, bro", new_restaurant_path, class: "btn btn-success" %>
</div>
